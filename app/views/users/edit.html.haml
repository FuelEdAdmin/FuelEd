-#  This file is app/views/users/show.html.haml

%div{:class => "textbox"}
  = form_tag user_path(@user), :method => :put do

    = label :user, :name, 'Name'
    = text_field :user, 'name'
    %br
    = label :user, :email, 'Email'
    = text_field :user, 'email'
    %br
    = label :user, :bio, 'Bio'
    = text_area :user, 'bio'
    %br
    = submit_tag 'Edit Profile'
